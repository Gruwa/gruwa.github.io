{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "command": "tsc",
    "args": ["--target", "ES5",
        "--sourceMap", "--watch",
        "app.ts"
        ],
    "problemMatcher": "$tsc"
}

